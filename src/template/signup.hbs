<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<form class='form' style='position: relative; top: 50vh; transform: translateY(-50%);' novalidate>
				<fieldset>
					<legend>Personal Data</legend>
					<div class="form-group">
						<label class="control-label">First name</label>
						<input class="form-control text" name="firstName">
					</div>
					<div class="form-group">
						<label class="control-label">Last name</label>
						<input class="form-control text" name="lastName">
					</div>
					<div class="form-group">
						<label class="control-label">DOB</label>
						<input class="form-control date" name="dateOfBirth">
					</div>
				</fieldset>
				<fieldset>
					<legend>Bank Account</legend>
					<div class="form-group">
						<label class="control-label">IBAN</label>
						<input class="form-control text" name="iban">
					</div>
					<div class="form-group">
						<label class="control-label">BIC</label>
						<input class="form-control text" name="bic">
					</div>
				</fieldset>
				<button class="btn btn-success save" type="button">Save</button>{{#if loading}}Loading{{/if}}
			</form>
		</div>
	</div>
</div>